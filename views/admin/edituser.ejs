  border-radius: 3px;
  font-size: 16px;
}

input[type="submit"] {
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 3px;
  padding: 10px;
  cursor: pointer;
  font-size: 16px;
  width: 50%;
}
</style>

<%
if(typeof message !=='undefined'){
  %>
     <h5><%=message%></h5>
  <%
}
%>

<h1>Edit</h1>
<form action="" method="post">
  <input type="text" name="userName" placeholder="Enter name" value="<%= user.userName%>" required>
